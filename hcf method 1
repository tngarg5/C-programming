
// method 1: using direct loop
#include <stdio.h>
void main()
{
	int  n,m,a,b, i,t=1;
	printf("Enter numbers:\n");
	scanf("%d", &n);
	scanf("%d", &m);
	printf("The HCF:\n");
	if(n>m){
	    a=n;
	    b=m;
	}
	else if(m>n) {
	    a = m;
	    b = n;
	}
	if(a%b==0)
	   printf("%d\t",b);
	else
	  {
	for (i =2; i < b ; i++)
	{
	if(a%i==0 && b%i == 0){
		t = i;
	break;
	}
	}
    printf("%d\t",t);
}}
